<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.edu.utfpr.controller.FXMLQuartoListaController">
   <children>
      <HBox alignment="CENTER_LEFT" prefHeight="68.0" prefWidth="370.0" VBox.vgrow="NEVER">
         <children>
            <Button mnemonicParsing="false" onAction="#newRecord" text="Novo">
               <HBox.margin>
                  <Insets left="20.0" right="10.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#edit" text="Editar">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#delete" text="Remover" />
         </children>
      </HBox>
      <TableView fx:id="tableData" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="columnId" maxWidth="-1.0" minWidth="100.0" prefWidth="-1.0" text="Código" />
            <TableColumn fx:id="columnNum" minWidth="100.0" prefWidth="75.0" text="Número" />
            <TableColumn fx:id="columnTipo" minWidth="100.0" prefWidth="75.0" text="Tipo" />
            <TableColumn fx:id="columnCamas" minWidth="100.0" prefWidth="75.0" resizable="false" text="Qtd. Camas" />
            <TableColumn fx:id="columnPessoas" minWidth="100.0" prefWidth="75.0" text="Qtd. Pessoas" />
         </columns>
      </TableView>
   </children>
</VBox>
