<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="468.0" prefWidth="620.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.edu.utfpr.controller.FXMLReservaListaController">
   <children>
      <HBox alignment="CENTER_LEFT" prefHeight="68.0" prefWidth="370.0" VBox.vgrow="NEVER">
         <children>
            <Button mnemonicParsing="false" onAction="#newRecord" text="Novo">
               <HBox.margin>
                  <Insets left="20.0" right="10.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#edit" text="Editar">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#delete" text="Remover" />
         </children>
      </HBox>
      <TableView fx:id="tableData" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="columnId" maxWidth="-1.0" minWidth="70.0" prefWidth="-1.0" text="Código" />
            <TableColumn fx:id="columnCliente" maxWidth="194.0" minWidth="118.0" prefWidth="118.0" text="Cliente" />
            <TableColumn fx:id="columnQuarto" maxWidth="282.0" minWidth="107.0" prefWidth="107.0" resizable="false" text="Quarto" />
            <TableColumn fx:id="columnCheckIn" maxWidth="375.0" minWidth="94.0" prefWidth="118.0" text="CheckIn" />
            <TableColumn fx:id="columnCheckOut" prefWidth="75.0" text="CheckOut" />
            <TableColumn fx:id="columnDiaria" prefWidth="119.0" text="Diária" />
         </columns>
      </TableView>
   </children>
</VBox>
